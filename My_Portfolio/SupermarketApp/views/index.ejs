<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>My CCA Portfolio App </title>
</head>
<style>
  body {
      background-color: #f9f4d6;
      font-family: 'Pacifico', sans-serif;
      font-weight: bold;
  }
  .card {
      margin-bottom: 20px;
  }
  footer {
      background-color: #010b15;
      color: whitesmoke;
      padding: 10px 0;
  }
  h2 {
      font-family:'Fira Code','Source Code Pro',monospace;
  }
</style>

<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">My CCA Portfolio App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addProduct">Add CCA</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>MY CCA PORTFOLIO</h2></div>
    <br>
  
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">CCA</th>
            <th width="100">CCA CERTIFICATE</th>
            <th width="50">CCA ACHIEVEMENT</th>
            <th width="50">Edit</th>
            <th width="50">Delete</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < portfolio.length; i++) { %>
          <tr>
            <td><a href="/product/<%= portfolio[i].id %>"><%= portfolio[i].cca %></a></td>
            <td><img src="/images/<%= portfolio[i].image %>" width="100%"></td>
            <td><%= portfolio[i].achievement %></td>
            <td><a href="/editProduct/<%= portfolio[i].id %>">Edit</a></td>
            <td><a href="/deleteProduct/<%= portfolio[i].id %>" onclick="return confirm('Are you sure to delete?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
